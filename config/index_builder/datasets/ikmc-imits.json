{
  "datasource": "ikmc-imits",
  "indexing": {
    "allow_document_creation": false,
    "days_between_downlads": 1,
    "attribute_map": [
      { "attr": "marker_symbol",          "idx": "marker_symbol", "use_to_map": true },
      { "attr": "colony_prefix",          "idx": "colony_prefix" },
      { "attr": "production_centre",      "idx": "microinjection_centre" },
      { "attr": "microinjection_status",  "idx": "microinjection_status" },

      { "attr": "phenotype_status",                            "idx": "imits_phenotype_status" },
      { "attr": "phenotype_colony_name",                       "idx": "imits_phenotype_colony_name" },
      { "attr": "phenotype_allele_type",                       "idx": "imits_phenotype_allele_type" },
      { "attr": "phenotype_is_active",                         "idx": "imits_phenotype_is_active" },
      { "attr": "phenotype_rederivation_started",              "idx": "imits_phenotype_rederivation_started" },
      { "attr": "phenotype_rederivation_complete",             "idx": "imits_phenotype_rederivation_complete" },
      { "attr": "phenotype_number_of_cre_matings_started",     "idx": "imits_phenotype_number_of_cre_matings_started" },
      { "attr": "phenotype_number_of_cre_matings_successful",  "idx": "imits_phenotype_number_of_cre_matings_successful" },
      { "attr": "phenotype_started",                           "idx": "imits_phenotype_started" },
      { "attr": "phenotype_complete",                          "idx": "imits_phenotype_complete" },

      { "attr": "report_allele_symbol",                        "idx": "imits_report_allele_symbol" },
      { "attr": "report_ikmc_project_id",                      "idx": "imits_report_ikmc_project_id" },
      { "attr": "report_distinct_genotype_confirmed_es_cells", "idx": "imits_report_distinct_genotype_confirmed_es_cells" },
      { "attr": "report_mutation_sub_type",                    "idx": "imits_report_mutation_sub_type" },
      { "attr": "report_overall_status",                       "idx": "imits_report_overall_status" },
      { "attr": "report_mi_plan_status",                       "idx": "imits_report_mi_plan_status" },
      { "attr": "report_mi_attempt_status",                    "idx": "imits_report_mi_attempt_status" },
      { "attr": "report_phenotype_attempt_status",             "idx": "imits_report_phenotype_attempt_status" },
      { "attr": "report_assigned_date",                        "idx": "imits_report_assigned_date" },
      { "attr": "report_assigned_es_cell_qc_in_progress_date", "idx": "imits_report_assigned_es_cell_qc_in_progress_date" },
      { "attr": "report_micro_injection_in_progress_date",     "idx": "imits_report_micro_injection_in_progress_date" },
      { "attr": "report_chimeras_obtained_date",               "idx": "imits_report_chimeras_obtained_date" },
      { "attr": "report_genotype_confirmed_date",              "idx": "imits_report_genotype_confirmed_date" },
      { "attr": "report_micro_injection_aborted_date",         "idx": "imits_report_micro_injection_aborted_date" },
      { "attr": "report_genetic_background",                   "idx": "imits_report_genetic_background" }
    ],
    "grouped_attributes": [
      { "attrs": ["production_centre","microinjection_status"], "idx": "microinjection_centre_status", "using": " - " }
    ]
  }
}
